{
  // Editor
  "editor.cursorStyle": "line-thin",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontFamily": "'Source Code Pro', 'Source Code Pro for Powerline'",
  "editor.renderIndentGuides": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [100],
  "editor.tabSize": 2,

  // Explorer
  "explorer.confirmDelete": true,

  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Git
  "git.confirmSync": false,

  // Integrated Terminal
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "SauceCodePro Nerd Font",
  "terminal.integrated.scrollback": 10000,

  // Window
  "window.menuBarVisibility": "visible",
  "window.titleBarStyle": "custom",

  // Workbench
  "workbench.colorTheme": "Sublime Material Theme - Dark",
  "workbench.colorCustomizations": {
    "terminal.background": "#252525",
    "terminal.foreground": "#eceff1",
    "terminal.ansiBlack": "#263238",
    "terminal.ansiGreen": "#8bc34a",
    "terminal.ansiYellow": "#f7c42a",
    "terminal.ansiBlue": "#2196f3",
    "terminal.ansiMagenta": "#9575cd",
    "terminal.ansiCyan": "#00bcd4",
    "terminal.ansiWhite": "#eceff1",
    "terminal.ansiRed": "#a54242",
    "terminal.ansiBrightBlack": "#617f8a",
    "terminal.ansiBrightRed":"#ec407a",
    "terminal.ansiBrightGreen": "#9ccc65",
    "terminal.ansiBrightYellow":"#ffb74d",
    "terminal.ansiBrightBlue": "#42a5f5",
    "terminal.ansiBrightMagenta": "#b39ddb",
    "terminal.ansiBrightCyan": "#26c6da",
    "terminal.ansiBrightWhite": "#ffffff"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.statusBar.feedback.visible": false,
  "window.zoomLevel": 0,
  "javascript.updateImportsOnFileMove.enabled": "always",
}
